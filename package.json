    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "connect-flash": "^0.1.1",
    "connect-mongodb-session": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "esbuild": "^0.25.5",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "javascript-obfuscator": "^4.1.1",
    "luxon": "^3.5.0",
    "mongodb": "^6.3.0",
    "multer": "^2.0.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.10.1",
    "puppeteer": "^24.16.2",
    "readline": "^1.3.0",
    "request": "^2.88.2",
    "sharp": "^0.34.3",
    "validator": "^13.15.15",
    "xlsx": "^0.18.5"
  }
}
