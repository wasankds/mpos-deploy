                  onfocus="popModalDocId(event)" 
                  oninput="popModalDocId(event)" 
                  autocomplete="off">
          <div class="modal"><div class="modal-list"></div></div>
        </div>
      </div> 
      -->


    </section>
    
    <!--  -->
    <section class="main-right">
      
      <!-- right#1 -->
      <!-- <div class="flex-row space-between">
        
        <button class="nowrap btn btn-sm bg-print " type="button" onclick="window.print();">
          <i class="fa fa-print"></i> พิมพ์
        </button>        
        
        <button class="btn btn-sm bg-move " type="button"
                data-toggle="842px"
                onclick="adjustWidthToggle(this);">
          <i class="fa fa-arrows-alt-h"></i>
        </button>

      </div> -->

      <!-- right#2 -->
      <div class="flex-row">
        
        <label class="al-r pd-r-s">เดือน</label>
        <select class="col-sm-w100 al-c" id="selectMonth" name="selectMonth">          
          <% monthDocs.forEach( m => { %>
          <option value="<%= m.month %>"><%= m.monthName %></option>
          <% }) %>
        </select>

        <!-- ปฏิทินเอกสาร -->
        <button class="btn btn-sm bg-mediumseagreen" 
                type="button" id="btnCalendar" 
                title="ปฏิทินเอกสารรายเดือน"
                onclick="concludeDocsCalendar();">
          <i class="fa fa-calendar mg-r-s"></i>ปฏิทิน
        </button>

        <button class="btn btn-sm bg-cornblue " type="button" 
              id="btnConcludeDocReport"
              title="สรุปเอกสารรายเดือน" 
              onclick="concludeDocs('month');">
           <i class="fa fa-file-alt"></i> สรุป
        </button>
      </div>

      <!--  -->
      <div class="flex-row">
        <label class="al-r pd-r-s">วันที่</label>
        <input class="col-sm-w100 al-c bg-white clickable bdr3" type="date" 
              id="selectDateTh">
        <!-- ปฏิทินเอกสาร -->
        <button class="btn btn-sm bg-deepskyblue" 
                type="button" id="btnConcludeByDate"
                title="สรุปเอกสารรายวัน"
                onclick="concludeDocs('date');">
          <i class="fa fa-file-alt mg-r-s"></i>สรุป
        </button>
      </div>

      <!-- right#3 -->
      <!-- <div class="flex-row space-between mg-t-m">
