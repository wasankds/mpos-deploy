    const DOMAIN_ALLOW = `<%= global.DOMAIN_ALLOW %>`
    const USER_AUTHORITY = `<%= user.userAuthority %>`

    const PATH_MAIN = `<%= PATH_MAIN %>`
    const PATH_DOC = `<%= PATH_DOC %>`
