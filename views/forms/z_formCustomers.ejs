<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= web_title ? web_title : '-' %></title>

  <!-- Font Awesome -->
  <!-- <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script> -->
  <link rel="stylesheet" href="<%= global.DOMAIN_ALLOW %>/cdn/fontawesome/css/all.min.css">
  
  <!-- bootstrap -->
  <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous"> -->
  <link rel="stylesheet" href="<%= global.DOMAIN_ALLOW %>/cdn/bootstrap.min.css">

  <!-- font -->
  <!-- <link rel="stylesheet" href="<%= global.DOMAIN_ALLOW %>/css/fontsAnuphan.css"> -->

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Anuphan:wght@100..700&display=swap'); 
    * {
      font-family: "Anuphan", sans-serif;
      font-optical-sizing: auto;
      font-weight: 400;
      font-style: normal;
      font-variation-settings: "wdth" 100;
    }
    body{
      max-width: 21cm;
      margin: auto; 
    }
    p{ 
      font-size: 0.75rem;
      margin-top: 0!important;
      margin-bottom: 0!important;
    }

    .table{ margin-bottom: 0; }
    .table thead th ,
    .table tbody td {
      font-size: 0.75rem;
      padding: 3px;
      border: 1px solid black;
      font-weight: 400;
    }

    .small{font-size: 0.6rem; }
    /* ทำให้ชิดขอบซ้ายขวา */
    .row { --bs-gutter-x: 0rem;}

    /* V2 */
    .page-break-after { 
      page-break-after: always; 
      border-bottom: 1px dashed gray ;
      padding-bottom: 10px;
    } 

    .fx-x{ text-decoration: line-through; }


    @media print {
      @page {
        size: A4;
        margin: 0.75cm;
      }

      .text-primary,
      .text-secondary,
      .text-white {
        color: black !important;
      }

      .table {
        border-collapse: collapse;
      }
      .table th, 
      .table td {
        border: 1px solid black !important;
      }
      /* .page-break-after {
        border-bottom: none;
      }  */
    }
  </style>
</head>
<body> 

  <main class="container mt-1">
    <!--  -->
    <div class="row pt-2">
      <h5 class="col-12 text-center"><%= title %></h5> 
    </div>    
    <p class="text-start"><%= dateTime %></p>
    
    <!--  -->
    <div class="row pt-1">
      <table class="table table-bordered mt-0" style="width: 100%;">
        <thead>
          <tr>
            <th class="text-center text-white bg-secondary">ลำดับ</th>
            <th class="text-center text-white bg-secondary">เลขที่</th>
            <th class="text-center text-white bg-secondary">ชื่อ</th>
            <th class="text-center text-white bg-secondary">ติดต่อ</th>
          </tr>
        </thead>
        <tbody>
          <% if(data && data.length > 0){ %>
            <% data.forEach( (obj,index) => { %>
            <%
              const classActive = obj.customerStatus == 'active' ? '' : 'fc-gray fx-x'
            %>
            <tr>
              <td class="<%= classActive %> text-center"><%= index+1 %></td>
              <td class="<%= classActive %> text-start"><%= obj.customerId %></td>
              <td class="<%= classActive %> text-start">
                <span><%= obj.customerName %></span><br>
                (<span><%= obj.customerType %></span>)
              </td>
              <td class="<%= classActive %> text-start">
                <p>
                  <span><%= obj.customerAddress1 %></span>,
                  <span><%= obj.customerAddress2 %></span>
                </p>
                <p>
                  <span><%= obj.customerPhone %></span>,
                  <span><%= obj.customerWebsite %></span>
                </p>
              </td>
            </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div> 
  </main>
</body>
</html>
