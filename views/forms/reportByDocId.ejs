          <span class="al-r mg-l-xl">[2] : </span>
          <%
            const colorPay2 = global.PAY_TYPE.find( o => o.paytype == doc.paymentMethod2 )?.color || 'fc-black';
          %>
          <span class="al-r <%= colorPay2 %>">[<%= doc.paymentMethod2Name %>]</span>
          <span class="al-l <%= colorPay2 %> fw-b"><%= doc.paymentAmount2 == 0 ? '-' : doc.paymentAmount2 %></span>
