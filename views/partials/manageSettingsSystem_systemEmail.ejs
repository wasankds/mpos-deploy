<!--  -->
<form id="emailForm" autocomplete="off" 
      action="<%= PATH_SAVE_EMAIL %>" 
      method="post"
      onsubmit="createSpinner()">

  <!--  -->
  <div class="flex-row mg-t-l">          
    <label class="col-sm-f" style="word-break: break-word; white-space: normal;">             
      <span class="pd-r-s">✍</span> สำหรับการส่งอีเมล์ระบบ เช่น การแจ้งเตือนรหัสผ่านเมื่อสร้างยูสเซอร์</label>
  </div>

  <!-- EMAIL_WHOSEND -->
  <div class="input-group mg-t-l">
    <label title="EMAIL_WHOSEND">ชื่อสำหรับส่งอีเมล</label> 
    <input class="pd-l-m" type="email"
            value="<%= settingsEmail?.EMAIL_WHOSEND ?? '' %>"
            id="EMAIL_WHOSEND" name="EMAIL_WHOSEND" 
            required placeholder="ชื่อสำหรับส่งอีเมล">
  </div>

  <!-- EMAIL_PASS -->
  <div class="input-group mg-t-xl">
    <label title="EMAIL_PASS">รหัสส่งอีเมลสำหรับแอปพลิเคชัน</label> 
    <input class="pd-l-m" type="text" minlength="19" 
            value="<%= settingsEmail?.EMAIL_PASS ?? '' %>"
            id="EMAIL_PASS" name="EMAIL_PASS" 
            required placeholder="รหัสส่งอีเมลสำหรับแอปพลิเคชัน">
  </div>

  <!-- Buttons/Save -->
  <section class="flex-row justify-content-center mg-t-xxl">
    <button class="btn btn-sm bg-save" type="submit">
      <i class="fas fa-save"></i> บันทึก
    </button>
  </section>

</form>